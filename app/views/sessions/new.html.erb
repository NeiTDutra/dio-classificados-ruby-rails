<div class="row p-5 bg-success">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    <%= bootstrap_form_for @user,  url: sessions_path do |form| %>
      
      <%= form.email_field :email %>
      <%= form.password_field :password %>
      <br>
      <%= form.submit t("helpers.submit.login") %>

    <% end %>
  </div>
  <div class="col-sm-3"></div>
</div>
